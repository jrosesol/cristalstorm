<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
        .important {
        	vertical-align: middle;
        	text-align: left;
        	height: 1000px;
       	    border: 1px solid #BBBBBB;
            padding: 3px;
            background-color: aqua;
        }
		
        .west {
            height: 100%;
            width: 300px;
            background-color: yellow;
        }
        
        .east {
            vertical-align: middle;
            text-align: center;
            height: 100%;
            background-color: red;
        }
        
        .south {
            vertical-align: middle;
            text-align: center;
            width: 100%;
            background-color: blue;
        }        
        
        .north {
        	font-size: x-large;
        	font-weight: bold;
        	color: black;
        	background-color: aqua;
        	width: 100%;
        	height: 100%;
       	}
       	
       	/*.gwt-DecoratorPanel .middle {*/
       	.test {
       		background-color: #d0e400;
      		margin: auto;
      		position: relative;
		}
		
		.mceScrollable {
			border: 1px solid #ccc;
			text-align: left;
		}
		
		.mceFormCell {
			padding-left: 20px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX">

		<g:north size="100">
			<g:DecoratorPanel styleName="{style.test}" width="100%" height="100%">
				<g:HorizontalPanel width="100%" height="100%" borderWidth="0" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" spacing="2">
					<g:Image url="favicon.ico"/>
					<g:Label text="New Label"/>
				</g:HorizontalPanel>
			</g:DecoratorPanel>
		</g:north>

		<g:east size="100">
	 		<g:FlowPanel addStyleNames="{style.east}">
				<g:Label>east</g:Label>
			</g:FlowPanel>
		</g:east>

		<g:west size="300" >
			<g:VerticalPanel addStyleNames="{style.west}">
				<g:VerticalPanel width="100%" height="200px" spacing="2">
					<g:Hyperlink text="Timesheet" targetHistoryToken="timesheet"/>
					<g:Hyperlink text="Tasks" targetHistoryToken="tasks"/>
					<g:Hyperlink text="Reports" targetHistoryToken="reports"/>
					<g:Hyperlink text="Company" targetHistoryToken="company"/>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</g:west>

		<g:south size="100">
	 		<g:FlowPanel addStyleNames="{style.south}" >
			<g:Label>Company. Copyright 2011 Company.</g:Label>
			</g:FlowPanel>		
		</g:south>

		<g:center>
			<g:VerticalPanel>
				<g:SimplePanel ui:field="simpleContentHolder" />					
			</g:VerticalPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>