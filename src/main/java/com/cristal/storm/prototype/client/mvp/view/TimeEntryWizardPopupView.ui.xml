<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
    xmlns:u="urn:import:com.cristal.storm.prototype.client.ui">

    <ui:style>
        .popup {
        	background-color: aqua;
        	border: 3px double black;
        	padding: 0 15px;
        }
        
        .cellTable {
        	border-bottom: 1px solid #ccc;
        	text-align: left;
        	margin-bottom: 4px;
        }
    </ui:style>

    <g:PopupPanel ui:field="widget" modal="true"
        glassEnabled="true">
        <g:VerticalPanel ui:field="wizardContent">
            <u:ListBoxWithKey ui:field="timeEntryTypes"></u:ListBoxWithKey>
            <g:SimplePanel ui:field="timeEntryConf"></g:SimplePanel>
            <g:Button ui:field="okButton">Ok</g:Button>
            <g:Button ui:field="cancelButton">Cancel</g:Button>
        </g:VerticalPanel>
    </g:PopupPanel>

</ui:UiBinder>