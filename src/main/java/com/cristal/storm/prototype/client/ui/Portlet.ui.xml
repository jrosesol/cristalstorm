<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.portlet {
			margin-top: 5px;
			background-color: #EEEEEE;
			border: 1px solid #DDDDDD;
			width: 100px;
		}
		
		.header {
			margin: 0.3em;
			padding-bottom: 4px;
			padding-left: 0.2em;
			background-color: #671BE0;
			border: 1px solid #5600E0;
			color: #FFFFFF;
			font-weight: bold;
		}
		
		.content {
			padding: 0.4em;
			color: #333333;
		}
		
		.portletContentControls {
			padding-left: 0.2em;
			margin-top: 5px;
			background-color: #EEEEEE;
			border: 1px solid #DDDDDD;
			width: 90px;
		}
	</ui:style>

	<g:FocusPanel ui:field="portletFocus">
		<g:HTMLPanel addStyleNames="{style.portlet}">
			<div ui:field="header" class="{style.header}"></div>
			<div ui:field="content" class="{style.content}"></div>
			<g:ListBox addStyleNames="{style.portletContentControls}" />
			<g:ListBox addStyleNames="{style.portletContentControls}"/>
			<g:TextBox addStyleNames="{style.portletContentControls}"/>
			<g:Button ui:field="saveActivity">Save Activity</g:Button>
			<g:Button ui:field="getActivities">Get Activities</g:Button>
		</g:HTMLPanel>
	</g:FocusPanel>

</ui:UiBinder> 