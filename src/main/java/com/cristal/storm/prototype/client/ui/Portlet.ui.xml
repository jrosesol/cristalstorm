<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.portlet {
			margin-top: 5px;
			background-color: #FFFFFF;
			border: 1px solid #000000;
			width: 100px;
		}
		
		.header {
			margin: 0.3em;
			padding-bottom: 4px;
			padding-left: 0.2em;
			background-color: #3F91C4;
			border: 1px solid #02024F;
			color: #FFFFFF;
			font-weight: bold;
		}
		
		.content {
			padding: 0.4em;
			color: #333333;
		}
		
		.portletContentControls {
			padding-left: 0.2em;
			margin-top: 5px;
			background-color: #EEEEEE;
			border: 1px solid #DDDDDD;
			width: 90px;
		}
	</ui:style>

	<g:FocusPanel ui:field="portletFocus">
		<g:HTMLPanel addStyleNames="{style.portlet}">
			<div ui:field="header" class="{style.header}"></div>
			<g:Label ui:field="lblProject"></g:Label>
			<g:ListBox ui:field="accountBox" addStyleNames="{style.portletContentControls}" />
			<g:Label ui:field="lblTask"></g:Label>
			<g:ListBox ui:field="activityBox" addStyleNames="{style.portletContentControls}"/>
			<g:Label ui:field="lblTasktime"></g:Label>
			<g:TextBox ui:field="timeEntryTime" addStyleNames="{style.portletContentControls}"/>
		</g:HTMLPanel>
	</g:FocusPanel>

</ui:UiBinder> 