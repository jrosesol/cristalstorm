<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:generic="urn:import:org.apache.bcel.generic">

    <ui:with field="res"
        type="com.cristal.storm.prototype.client.util.Resources" />

    <ui:style>
        .dayDock {
        	margin-top: 5px;
        	background-color: #EEEEEE;
        	width: 170px;
        }
        
        .focusStyleColor1 {
        	background-color: #DDDDDD;
        }
    </ui:style>

    <g:FocusPanel ui:field="dayFocusPanel">
        <g:HTMLPanel addStyleNames="{style.dayDock}">
            <g:VerticalPanel>
                <g:HTMLPanel>
                    <table class="{res.style.innerDayTable}">
                        <tr>
                            <td>
                                <g:Label ui:field="dateDisplay" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <g:FlowPanel ui:field="someDay"
                                    styleName="{style.focusStyleColor1}"></g:FlowPanel>
                            </td>
                        </tr>
                    </table>
                </g:HTMLPanel>
            </g:VerticalPanel>
        </g:HTMLPanel>
    </g:FocusPanel>

</ui:UiBinder> 